{
  "src_folders" : ["nightwatch"],
  "live_output": true,
  "test_workers" : {
    "enabled" : true,
    "workers" : 5
  },

  "selenium" : {
    "start_process" : true,
    "server_path" : "selenium-server-standalone-2.48.2.jar",
    "host" : "127.0.0.1",
    "port" : 4444,
    "cli_args" : {
      "webdriver.chrome.driver" : "chromedriver"
    }
  },

  "test_settings" : {
    "default" : {
      "silent": true,
      "screenshots" : {
        "enabled" : false,
        "path" : ""
      },
      "desiredCapabilities": {
        "browserName": "firefox",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    }
  }
}